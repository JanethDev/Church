<?xml version="1.0" encoding="utf-8" ?>
<popup:PopupPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:popup="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Page"
    x:Class="Church.Mobile.Views.PurchaseRequest.PopupMakePayment">
    <StackLayout VerticalOptions="Center">
        <Frame>

            <StackLayout>

                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                    <Image Source="{ Binding SelectedImageSource }" HorizontalOptions="FillAndExpand"
                    Aspect="AspectFill" HeightRequest="{ Binding ScreenHeight }"/>
                </StackLayout>
                
                <Button Text="Seleccionar ticket" TextColor="White"
                        Command="{ Binding PickPhotoCommand }" BackgroundColor="DarkBlue" />

                <Button Text="Subir pago"  TextColor="White"
                        Command="{ Binding UploadTicketCommand }" BackgroundColor="DarkGreen" />

            </StackLayout>

        </Frame>
    </StackLayout>
</popup:PopupPage>