<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Iniciar sesion"
             xmlns:Helpers="clr-namespace:Church.Mobile.Helpers"
             xmlns:local="clr-namespace:Church.Mobile"
             x:Class="Church.Mobile.Views.Login">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Image Source="{local:ImageResource Church.Mobile.Assets.Images.logo.png}"
                   VerticalOptions="Center" HorizontalOptions="Center"
                   HeightRequest="200"/>


            <Entry Text="{Binding UserName}"  Placeholder="Usuario"></Entry>
            <Entry Text="{Binding Password}"  Placeholder="Password" IsPassword="True"></Entry>
            <Button TextColor="{x:Static Helpers:Constants.ColorWhite}" BackgroundColor="{x:Static Helpers:Constants.ColorPrimary}" Text="Iniciar sesión" Command="{Binding LogInCommand}"></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>