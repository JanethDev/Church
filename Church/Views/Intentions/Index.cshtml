@model StaticPagedList<dtoIntentions>
@{
    ViewBag.Title = "Intenciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Ajax.BeginForm(
                    new AjaxOptions
                    {
                        HttpMethod = "get",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "IntentionsList"
                    }))
{
    <div class="card">
        <div class="card-header card-header-green">
            <div class="row">
                <div class="col-md-10">
                    <h2>@ViewBag.Title</h2>
                </div>
                <div class="col-md-2 col-sm-2 col-xs-12">
                    <p style="text-align:right; padding-top:20px">
                        <a style="width:100%;" href="@Url.Action("Create","Intentions",null)" class="btn btn-default btn-large">Agregar</a>
                    </p>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-3" style="display:none">
                    <div class="form-group">
                        <label>Nombre</label>
                        <input type="search" id="Name" name="Name" class="form-control" data-autocomple="@Url.Action("acName")" placeholder="Intención" value="@ViewBag.Name" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Persona a mencionar</label>
                        <input type="search" id="MentionPerson" name="MentionPerson" class="form-control" data-autocomple="@Url.Action("acMentionPerson")" placeholder="Persona a mencionar" value="@ViewBag.MentionPerson" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Motivo</label>
                        @Html.DropDownList("IntentionTypeID", (SelectList)ViewBag.IntentionTypes, "Seleccionar opción", new { @class = "form-control", @selected = ViewBag.IntentionTypeID })
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Fecha de solicitud</label>
                        <input type="search" id="ApplicationDate" name="ApplicationDate" class="form-control datepicker" placeholder="Fecha de solicitud" value="@ViewBag.ApplicationDate" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Fecha de intención</label>
                        <input type="search" id="IntentionDate" name="IntentionDate" class="form-control datepicker" placeholder="Fecha de intención" value="@ViewBag.IntentionDate" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Hora</label>
                        <input type="text" class="form-control hours-timepicker" id="Hour" name="Hour" value="@ViewBag.Hour">
                    </div>
                </div>
                <div class="col-md-4">
                    <label>&ensp;</label>
                    <div class="form-group">
                        <input id="btnPDF" class="btn btn-danger btn-large btn-clean" type="button" value="Descargar" />
                        @Html.ActionLink("Limpiar", "Index", new { iCleanFilter = 1 }, htmlAttributes: new { @class = "btn btn-primary btn-large btn-clean" })
                        <input id="btnSearch" class="btn btn-success btn-large btn-clean" type="submit" value="Buscar" />
                    </div>
                </div>
            </div>
            @Html.Partial("_Intentions", Model)
        </div>
    </div>
}

@using (Html.BeginForm("PDF", "Intentions", FormMethod.Post, new { id = "PDFCreateForm" }))
{
    <input type="hidden" id="pdfName" name="Name">
    <input type="hidden" id="pdfIntentionTypeID" name="IntentionTypeID">
    <input type="hidden" id="pdfApplicationDate" name="ApplicationDate">
    <input type="hidden" id="pdfIntentionDate" name="IntentionDate">
}


@section scripts {
    <script src="~/Scripts/timepicker.js"></script>
    <script src="~/Scripts/ui.datepicker-es-MX.js"></script>
    <script type="text/javascript">
        $(function () {
            $.datepicker.setDefaults($.datepicker.regional['es-MX']);
            $(".datepicker").datepicker();
        });

        $(".hours-timepicker").timepicker({
            use12HourClock: true,
            timeFormat: "%h:%i %a",
            minTime: "13:15",
            maxTime: "12:59"
        });


        $("#btnPDF").click(function () {
            $("#PDFCreateForm").submit();
        });
    </script>
}