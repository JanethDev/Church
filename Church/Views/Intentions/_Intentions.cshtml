@model StaticPagedList<dtoIntentions>
<div id="IntentionsList">
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <tr class="tableStyleHeader">
                <th style="display:none">
                    @Html.ActionLink("Nombre", "Index", new { Sorting_Order = ViewBag.SortingName, Name = ViewBag.Name, IntentionTypeID = ViewBag.IntentionTypeID, ApplicationDate = ViewBag.ApplicationDate, IntentionDate = ViewBag.IntentionDate , Hour = ViewBag.MentionPerson, MentionPerson = ViewBag.MentionPerson })
                </th>
                <th>
                    @Html.ActionLink("Persona a mencionar", "Index", new { Sorting_Order = ViewBag.SortingMentionPerson, Name = ViewBag.Name, IntentionTypeID = ViewBag.IntentionTypeID, ApplicationDate = ViewBag.ApplicationDate, IntentionDate = ViewBag.IntentionDate , Hour = ViewBag.MentionPerson, MentionPerson = ViewBag.MentionPerson })
                </th>
                <th>
                    @Html.ActionLink("Tipo", "Index", new { Sorting_Order = ViewBag.SortingIntentionType, Name = ViewBag.Name, IntentionTypeID = ViewBag.IntentionTypeID, ApplicationDate = ViewBag.ApplicationDate, IntentionDate = ViewBag.IntentionDate, Hour = ViewBag.Hour, MentionPerson = ViewBag.MentionPerson })
                </th>
                <th>
                    @Html.ActionLink("Fecha solicitud", "Index", new { Sorting_Order = ViewBag.SortingApplicationDate, Name = ViewBag.Name, IntentionTypeID = ViewBag.IntentionTypeID, ApplicationDate = ViewBag.ApplicationDate, IntentionDate = ViewBag.IntentionDate, Hour = ViewBag.Hour, MentionPerson = ViewBag.MentionPerson })
                </th>
                <th>
                    @Html.ActionLink("Hora", "Index", new { Sorting_Order = ViewBag.SortingHour, Name = ViewBag.Name, IntentionTypeID = ViewBag.IntentionTypeID, ApplicationDate = ViewBag.ApplicationDate, IntentionDate = ViewBag.IntentionDate, Hour = ViewBag.Hour, MentionPerson = ViewBag.MentionPerson })
                </th>
                <th>
                    @Html.ActionLink("Fecha intención", "Index", new { Sorting_Order = ViewBag.SortingIntentionDate, Name = ViewBag.Name, IntentionTypeID = ViewBag.IntentionTypeID, ApplicationDate = ViewBag.ApplicationDate, IntentionDate = ViewBag.IntentionDate, Hour = ViewBag.Hour, MentionPerson = ViewBag.MentionPerson })
                </th>
                <th></th>
            </tr>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="5"><label>No se encontraron resultados</label></td>
                </tr>
            }

            @foreach (var item in Model)
            {
                <tr class="tableStylerow">
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MentionPerson)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IntentionType)
                    </td>
                    <td>
                        @item.ApplicationDate.ToShortDateString()
                    </td>
                    <td>
                        @item.Hour
                    </td>
                    <td>
                        @item.IntentionDate.ToShortDateString()
                    </td>
                    <td align="center">
                        @Html.ActionLink("Ver Registro", "Details", new { id = item.IntentionID }, new { @class = "" })
                    </td>
                </tr>
            }
            <tr class="tableStyleHeader">
                <td colspan="9">
                    <div id="pagedList" class="pagedList" data-otf-target="#IntentionsList">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, Sorting_Order = ViewBag.Sorting_Order, Name = ViewBag.Name, IntentionTypeID = ViewBag.IntentionTypeID, ApplicationDate = ViewBag.ApplicationDate, IntentionDate = ViewBag.IntentionDate, Hour = ViewBag.Hour , MentionPerson = ViewBag.MentionPerson }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(PagedListRenderOptions.ClassicPlusFirstAndLast, new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "IntentionsList" }))
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $("#pdfName").val($("#Name").val());
        $("#pdfIntentionTypeID").val($("#IntentionTypeID").val());
        $("#pdfApplicationDate").val($("#ApplicationDate").val());
        $("#pdfIntentionDate").val($("#IntentionDate").val());
    });
</script>