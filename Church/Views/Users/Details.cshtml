@model tblUsers

@{
    ViewBag.Title = "Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header card-header-green">
        <h2>
            @ViewBag.Title
        </h2>
    </div>
    <div class="card-body">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-4 col-sm-6 col-xs-12" style="padding-bottom:5px;">
                <div class="label-design">
                    <span class="label-detail-header label-designInside">
                        @Html.DisplayNameFor(model => model.Name):
                    </span>
                    <span class="label-detail label-design">
                        @Html.DisplayFor(model => model.Name)
                    </span>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12" style="padding-bottom:5px;">
                <div class="label-design">
                    <span class="label-detail-header label-designInside">
                        @Html.DisplayNameFor(model => model.PSurname):
                    </span>
                    <span class="label-detail label-design">
                        @Html.DisplayFor(model => model.PSurname)
                    </span>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12" style="padding-bottom:5px;">
                <div class="label-design">
                    <span class="label-detail-header label-designInside">
                        @Html.DisplayNameFor(model => model.MSurname):
                    </span>
                    <span class="label-detail label-design">
                        @Html.DisplayFor(model => model.MSurname)
                    </span>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12" style="padding-bottom:5px;">
                <div class="label-design">
                    <span class="label-detail-header label-designInside">
                        @Html.DisplayNameFor(model => model.RolID):
                    </span>
                    <span class="label-detail label-design">
                        @Html.DisplayFor(model => model.Rol)
                    </span>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12" style="padding-bottom:5px;">
                <div class="label-design">
                    <span class="label-detail-header label-designInside">
                        @Html.DisplayNameFor(model => model.UserName):
                    </span>
                    <span class="label-detail label-design">
                        @Html.DisplayFor(model => model.UserName)
                    </span>
                </div>
            </div>
        </div>
        <div class="row">
            <hr />
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12" style="padding-bottom:5px;">
                <div class="label-design">
                    <span class="label-detail-header label-designInside">
                        @Html.DisplayNameFor(model => model.CreatedBy):
                    </span>
                    <span class="label-detail label-design">
                        @ViewBag.CreatedBy
                    </span>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12" style="padding-bottom:5px;">
                <div class="label-design">
                    <span class="label-detail-header label-designInside">
                        @Html.DisplayNameFor(model => model.CreatedDate):
                    </span>
                    <span class="label-detail label-design">
                        @Model.CreatedDate
                    </span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12" style="padding-bottom:5px;">
                <div class="label-design">
                    <span class="label-detail-header label-designInside">
                        @Html.DisplayNameFor(model => model.UpdatedBy):
                    </span>
                    <span class="label-detail label-design">
                        @ViewBag.UpdatedBy
                    </span>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12" style="padding-bottom:5px;">
                <div class="label-design">
                    <span class="label-detail-header label-designInside">
                        @Html.DisplayNameFor(model => model.UpdatedDate):
                    </span>
                    <span class="label-detail label-design">
                        @Model.UpdatedDate
                    </span>
                </div>
            </div>
        </div>


    </div>
    
</div>


<div class="row mt-3">
    <div class="col-md-2 col-sm-2 col-xs-12">
        <a href="@Url.Action("Index")" class="btn btn-primary w-100"><i class="mdi mdi-arrow-left"></i> Volver</a>
    </div>
    <div class="offset-md-6 col-md-2 col-sm-2 col-xs-12" style="text-align:right;">
        <a href="@Url.Action("Edit", new { id = Model.UserID })" class="btn btn-success w-100"><i class="mdi mdi-file-edit"></i> Editar</a>
    </div>
    <div class="col-md-2 col-sm-2 col-xs-12" style="text-align:right;">
        <button type="button" id="btnDelete" class="btn btn-danger w-100"><i class="mdi mdi-delete"></i>Eliminar</button>
    </div>
</div>
        @section Scripts{
            <script>
        $("#btnDelete").click(function () {
            AlertConfirm("¿Esta seguro que desea eliminar el registro?", "@Url.Action("Delete", new { id = Model.UserID })");
        })
            </script>
        }
