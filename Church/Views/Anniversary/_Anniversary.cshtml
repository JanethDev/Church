@model StaticPagedList<dtoAnniversary>
<div id="AnniversaryList">
    <div class="table-responsive">
        <table class="table table-striped table-bordered" id="tableExport">
            <tr class="tableStyleHeader">
                <th>
                    @Html.ActionLink("Nombre del evento", "Index", new { Sorting_Order = ViewBag.SortingName, Name = ViewBag.Name, Date = ViewBag.Date })
                </th>
                <th>
                    @Html.ActionLink("Fecha", "Index", new { Sorting_Order = ViewBag.SortingDate, Name = ViewBag.Name, Date = ViewBag.Date })
                </th>
                <th style="color:white">
                    <a href="#">Hora</a>
                </th>
                <th class="ignore"></th>
            </tr>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="9"><label>No se encontraron resultados</label></td>
                </tr>
            }
            @foreach (var item in Model)
            {
                <tr class="tableStylerow">
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @item.Date.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @item.Hour
                    </td>
                    <td class="ignore" align="center">
                        @Html.ActionLink("Ver Registro", "Details", new { id = item.AnniversaryID }, new { @class = "" })
                    </td>
                </tr>
            }
        </table>
        <tr class="tableStyleHeader" style="float:right">
            <td colspan="9">
                <div id="pagedList" class="pagedList" data-otf-target="#AnniversaryList">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, Sorting_Order = ViewBag.Sorting_Order, Name = ViewBag.Name }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(PagedListRenderOptions.ClassicPlusFirstAndLast, new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "AnniversaryList" }))
                </div>
            </td>
        </tr>
    </div>
</div>
<a id="ParametrosPDF" href="@Url.Action("GeneratePDF", new { Sorting_Order = ViewBag.SortingName, Name = ViewBag.Name, Date = ViewBag.Date, Hour = ViewBag.Hour, page = ViewBag.Page})"></a>
<script>
    $("#pdf").attr("href", $("#ParametrosPDF").attr("href"));
</script>