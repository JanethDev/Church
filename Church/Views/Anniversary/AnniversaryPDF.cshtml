@model StaticPagedList<dtoAnniversary>
@{
    Layout = "~/Views/Shared/_LayoutPDF.cshtml";

}

<table style="width:100%">
    <tr><td class=""><h2 class=""><b>Aniversario Luctuoso</b></h2></td></tr>
</table>

<table style="width:100%; margin-top:30px;">
    <tr>
        <td style="border: 1px solid;">
            <span class="labeltitles">Nombre del evento:</span> 
        </td>
        <td style="border: 1px solid;">
            <span class="labeltitles">Fecha:</span> 
        </td>
        <td style="border: 1px solid;">
            <span class="labeltitles">Hora:</span> 
        </td>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td style="border: 1px solid;">
            @item.Name
        </td>
        <td style="border: 1px solid;">
            @item.Date.ToShortDateString()
        </td>
        <td style="border: 1px solid;">
            @item.Hour
        </td>
    </tr>
    }
</table>