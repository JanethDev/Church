@model StaticPagedList<dtoCustomers>
<div id="CustomersList">
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <tr class="tableStyleHeader">
                <th>
                    @Html.ActionLink("Nombre", "Index", new { Sorting_Order = ViewBag.SortingName, Name = ViewBag.Name, PSurname = ViewBag.PSurname, Email = ViewBag.Email, Date = ViewBag.Date })
                </th>
                <th>
                    @Html.ActionLink("Apellido Paterno", "Index", new { Sorting_Order = ViewBag.SortingPSurname, Name = ViewBag.Name, PSurname = ViewBag.PSurname, Email = ViewBag.Email, Date = ViewBag.Date })
                </th>
                <th>
                    @Html.ActionLink("Celular", "Index", new { Sorting_Order = ViewBag.SortingCelphone, Name = ViewBag.Name, PSurname = ViewBag.PSurname, Celphone = ViewBag.Celphone, Date = ViewBag.Date })
                </th>
                <th>
                    @Html.ActionLink("Fecha de creación", "Index", new { Sorting_Order = ViewBag.SortingDate, Name = ViewBag.Name, PSurname = ViewBag.PSurname, Email = ViewBag.Email, Date = ViewBag.Date })
                </th>
                <th></th>
            </tr>
            
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="9"><label>No se encontraron resultados</label></td>
                </tr>
            }

            @foreach (var item in Model)
            {
        <tr class="tableStylerow">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PSurname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CelPhone)
            </td>
            <td>
                @item.CreatedDate.ToString("dd/MM/yyyy")
            </td>
            <td align="center">
                @Html.ActionLink("Ver Registro", "Details", new { id = item.CustomerID }, new { @class = "" })
                @Html.ActionLink("Solicitar", "Solicitud", "Crypts", new { CustomerID = item.CustomerID }, new { @class = "" })
                @if (item.NumberQuotation > 0)
                {
                    @Html.ActionLink("Cotización", "Quotation", "ProspectiveCustomer", new { id = item.CustomerID }, new { @class = "" })
                }
            </td>
        </tr>
            }
            <tr class="tableStyleHeader">
                <td colspan="9">
                    <div id="pagedList" class="pagedList" data-otf-target="#CustomersList">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, Sorting_Order = ViewBag.Sorting_Order, Name = ViewBag.Name, PSurname = ViewBag.PSurname, Email = ViewBag.Email, Date = ViewBag.Date }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(PagedListRenderOptions.ClassicPlusFirstAndLast, new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "CustomersList" }))
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>