@model StaticPagedList<dtoPushNotificationsMessages>
<div id="PushNotificationsMessagesList">
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <tr class="tableStyleHeader">
                <th>
                    @Html.ActionLink("Título", "Index", new { Sorting_Order = ViewBag.SortingTitle, Name = ViewBag.Name, Message = ViewBag.Message, Date = ViewBag.Date, Status = ViewBag.Status })
                </th>
                <th>
                    @Html.ActionLink("Mensaje", "Index", new { Sorting_Order = ViewBag.SortingMessage, Name = ViewBag.Name, Message = ViewBag.Message, Date = ViewBag.Date, Status = ViewBag.Status })
                </th>
                <th>
                    @Html.ActionLink("Fecha", "Index", new { Sorting_Order = ViewBag.SortingCreatedDate, Name = ViewBag.Name, Message = ViewBag.Message, Date = ViewBag.Date, Status = ViewBag.Status })
                </th>
                <th>
                    @Html.ActionLink("Estatus", "Index", new { Sorting_Order = ViewBag.SortingDraft, Name = ViewBag.Name, Message = ViewBag.Message, Date = ViewBag.Date, Status = ViewBag.Status })
                </th>
                <th width="20%"></th>
            </tr>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="5"><label>No se encontraron resultados</label></td>
                </tr>
            }

            @foreach (var item in Model)
            {
        <tr class="tableStylerow">
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estatus)
            </td>
            <td align="center">
                <a href="@Url.Action("Details", "PushNotificationsMessages", new { id = item.PushNotificationMessageID })" class="md-a-center-icon">Detalles</a>
            </td>
        </tr>
            }
            <tr class="tableStyleHeader">
                <td colspan="9">
                    <div id="pagedList" class="pagedList" data-otf-target="#PushNotificationsMessagesList">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, Sorting_Order = ViewBag.Sorting_Order, Name = ViewBag.Name, IntentionTypeID = ViewBag.IntentionTypeID, ApplicationDate = ViewBag.ApplicationDate, IntentionDate = ViewBag.IntentionDate, Hour = ViewBag.Hour , MentionPerson = ViewBag.MentionPerson }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(PagedListRenderOptions.ClassicPlusFirstAndLast, new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "IntentionsList" }))
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>

