@model StaticPagedList<dtoDiscounts>
<div id="DiscountsList">
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <tr class="tableStyleHeader">
                <th>
                    @Html.ActionLink("Porcentaje", "Index", new { Sorting_Order = ViewBag.SortingPercentage, Percentage = ViewBag.Percentage, InitDate = ViewBag.InitDate, EndDate = ViewBag.EndDate })
                </th>
                <th>
                    @Html.ActionLink("Fecha inicio", "Index", new { Sorting_Order = ViewBag.SortingInitDate, Percentage = ViewBag.Percentage, InitDate = ViewBag.InitDate, EndDate = ViewBag.EndDate })
                </th>
                <th>
                    @Html.ActionLink("Fecha fin", "Index", new { Sorting_Order = ViewBag.SortingEndDate, Percentage = ViewBag.Percentage, InitDate = ViewBag.InitDate, EndDate = ViewBag.EndDate })
                </th>
                @*<th>
            @Html.ActionLink("Fecha de creación", "Index", new { Sorting_Order = ViewBag.SortingDate, Percentage = ViewBag.Percentage, InitDate = ViewBag.InitDate, EndDate = ViewBag.EndDate })
        </th>*@
                <th></th>
            </tr>
          

            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="9"><label>No se encontraron resultados</label></td>
                </tr>
            }

            @foreach (var item in Model)
            {
                <tr class="tableStylerow">
                    <td>
                        @Html.DisplayFor(modelItem => item.Percentage)
                    </td>
                    <td>
                        @item.InitDate.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @item.EndDate.ToString("dd/MM/yyyy")
                    </td>
                    @*<td>
                        @item.CreatedDate.ToString("dd/MM/yyyy")
                    </td>*@
                    <td align="center">
                        @Html.ActionLink("Ver Registro", "Details", new { id = item.DiscountID }, new { @class = "" })
                    </td>
                </tr>
            }
            <tr class="tableStyleHeader">
                <td colspan="9">
                    <div id="pagedList" class="pagedList" data-otf-target="#DiscountsList">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, Sorting_Order = ViewBag.Sorting_Order, Percentage = ViewBag.Percentage, InitDate = ViewBag.InitDate, EndDate = ViewBag.EndDate }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(PagedListRenderOptions.ClassicPlusFirstAndLast, new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "DiscountsList" }))
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>