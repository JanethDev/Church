@model tblUsers

@{
    ViewBag.Title = "Cambiar contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="font-lato-bold">@ViewBag.Title</h2>
@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { id = "UserEditForm" }))
{
    @Html.AntiForgeryToken()
    <div class="container-form">
        <div class="row">
            <div class="col-md-4 col-sm-6 col-xs-12" style="padding-bottom:5px;">
                <div class="labels-design">
                    <span class="span-detail-header span-designInside">
                        @Html.DisplayNameFor(model => model.Name):
                    </span>
                    <span class="span-detail span-design">
                        @Html.DisplayFor(model => model.Name)
                    </span>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12" style="padding-bottom:5px;">
                <div class="span-design">
                    <span class="span-detail-header span-designInside">
                        @Html.DisplayNameFor(model => model.PSurname):
                    </span>
                    <span class="span-detail span-design">
                        @Html.DisplayFor(model => model.PSurname)
                    </span>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12" style="padding-bottom:5px;">
                <div class="span-design">
                    <span class="span-detail-header span-designInside">
                        @Html.DisplayNameFor(model => model.MSurname):
                    </span>
                    <span class="span-detail span-design">
                        @Html.DisplayFor(model => model.MSurname)
                    </span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-sm-6 col-xs-12" style="padding-bottom:5px;">
                <div class="span-design">
                    <span class="span-detail-header span-designInside">
                        @Html.DisplayNameFor(model => model.RolID):
                    </span>
                    <span class="span-detail span-design">
                        @Html.DisplayFor(model => model.Rol)
                    </span>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12" style="padding-bottom:5px;">
                <div class="span-design">
                    <span class="span-detail-header span-designInside">
                        @Html.DisplayNameFor(model => model.UserName):
                    </span>
                    <span class="span-detail span-design">
                        @Html.DisplayFor(model => model.UserName)
                    </span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-sm-6 col-xs-12">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
                <input type="password" class="form-control" name="Password" value="" />
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12">
                @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>
        </div>
    </div>

    @Html.HiddenFor(model => model.UserID)
    @Html.HiddenFor(model => model.Name)
    @Html.HiddenFor(model => model.PSurname)
    @Html.HiddenFor(model => model.MSurname)
    @Html.HiddenFor(model => model.RolID)
    @Html.HiddenFor(model => model.UserName)
    @Html.HiddenFor(model => model.Active)
    @Html.HiddenFor(model => model.CreatedDate)
    @Html.HiddenFor(model => model.CreatedBy)
    @Html.HiddenFor(model => model.UpdatedDate)
    @Html.HiddenFor(model => model.UpdatedBy)
    @Html.HiddenFor(model => model.DeletedDate)
    @Html.HiddenFor(model => model.DeletedDate)
    @Html.HiddenFor(model => model.Password)
    @Html.HiddenFor(model => model.ConfirmPassword)

    <div class="row" style="padding-top:15px;">
        <div class="col-md-2 col-sm-2 col-xs-12">
            @Html.ActionLink("Volver", "Index", "Home", null, new { @class = "btn btn-primary", @style = "width:100%;" })
        </div>
        <div class="col-md-offset-8 col-md-2 col-sm-offset-8 col-sm-2 col-xs-12">
            <input type="submit" value="Guardar" class="btn btn-secondary" style="float:right;width:100%;" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}

