@model tblLogin
@{
    ViewBag.Title = "Inicio de sesión";
}

<div class="card text-dark bg-light mb-3 container-login">
    <div class="card-header text-white">
        <h4>Bienvenido al sistema de Catedral Tijuana!</h4>
    </div>
    <div class="card-body">

        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="row">
                <div class="col-12 text-center">
                    <img src="@Url.Content("~/Content/Images/LogoParroquia.png")" height="140">
                </div>

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { })

          
                <div class="col-12 form-group mt-3">
                    @Html.LabelFor(m => m.UserName, new { @class = "font-weight-bold" })
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>

                <div class="col-12 form-group mt-2">
                    @Html.LabelFor(m => m.Password, new { @class = "font-weight-bold" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <div class="col-6 form-group mt-2">
                    <div class="pretty p-icon p-smooth">
                        <input type="checkbox" value="true" id="@Html.IdFor(r => r.RememberMe)" name="@Html.NameFor(r => r.RememberMe)" />
                        <div class="state p-success">
                            <i class="icon mdi mdi-check"></i>
                            @Html.LabelFor(m => m.RememberMe, new { @class = "font-weight-bold" })
                        </div>
                    </div>
                </div>
                <div class="col-6 form-group mt-2">
                    <a href="#" data-toggle="modal" data-target=".bs-example-modal-sm" class="float-right">¿Olvido su contraseña?</a>
                </div>
                <div class="col-12 form-group mt-2">
                    <input type="submit" value="Iniciar sesión" class="btn btn-success w-100" />
                </div>
            </div>
        }
    </div>
</div>


<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Recuperar contrase&ntilde;a</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label">Ingrese su correo el&eacute;ctr&oacute;nico.</label>
                    <input type="text" name="UserName" class="form-control" id="recovering">
                </div>
            </div>
            <div class="modal-footer">
                <h6 style="float: left;" id="message"></h6>
                <button type="button" id="btnRecoverPassword" class="btn btn-default">Recuperar</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript">
        var vMsj = 100;
        @if (TempData["msj"] != null)
        {
            <text>vMsj = @Html.Raw(TempData["msj"]);</text>
        }

        if(vMsj == 0)
        {
            AlertMessage("El registro se concreto exitosamente, ahora puede iniciar sesión.");
        }
        var urlEmailRecovery = '@Url.Action("Recover", "Account")';

    $('#linkModal').on('click', function () {
        $('#recovering').val("");
        $('#message').text("");
        $('#btnRecoverPassword').show();
    });

    $('#btnRecoverPassword').on('click', function () {
        $('#message').text("");
        var r = $('#recovering').val();
        if (r != "") {
            $.ajax({
                type: "GET",
                url: urlEmailRecovery,
                dataType: "json",
                data: { email: JSON.stringify(r) },
                contentType: 'application/json; charset=utf-8',
                beforeSend: function () {
                    $('#message').text('Procesando su petición.');
                },
                success: function (data) {
                    if (data == "Success") {
                        $('#message').text('Hemos mandado su contraseña al correo proporcionado.');
                        $('#btnRecoverPassword').hide();
                    }
                    else {
                        $('#message').text('Usuario no encontrado.');
                    }
                },
                error: function (error) {
                    alert(error.responseText);
                }
            });
        }
    });
</script>
}